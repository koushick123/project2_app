<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="90dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@color/colorAccent"
        android:id="@+id/stockHawkWidget"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/symbolWidget"
            android:layout_marginTop="@dimen/widgetStockTextPadLeftMarginTop"
            android:paddingLeft="@dimen/widgetStockTextPadLeftMarginTop"
            android:layout_gravity="top"
            android:text="AAPL"
            android:textColor="@color/yellow"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currencyWidget"
                android:layout_gravity="left"
                android:src="@drawable/ic_dollar"
                android:paddingLeft="@dimen/widgetDollarPadLeft"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/stockWidget"
                android:textColor="@color/yellow"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>